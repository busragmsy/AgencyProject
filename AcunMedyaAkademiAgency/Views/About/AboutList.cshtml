@model List<AcunMedyaAkademiAgency.Entities.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    /* Açıklama sütununun kaydırılmasını sağlamak için */
    .description-cell {
        max-width: 300px; /* Açıklama sütununun maksimum genişliği */
        max-height: 80px; /* Açıklama çok uzun olursa maksimum 80px yüksekliğe kadar gözüksün */
        overflow-y: auto; /* Eğer içerik taşarsa kaydırma çubuğu eklensin */
        white-space: normal; /* Satır sonlarında otomatik bölünme sağlansın */
        word-wrap: break-word; /* Kelimeler bölünerek düzgün sığsın */
        border: 1px solid #ddd; /* Hafif bir çerçeve ekleyerek belirgin hale getir */
        padding: 5px; /* İç boşluk ekleyerek görünümü iyileştir */
    }
</style>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Sayfası</h4>
            <p class="card-description">
                Hakkımızda bilgilerini buradan yönetebilirsiniz.
            </p>
            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aranacak Kelime" aria-label="Aranacak Kelime" aria-describedby="basic-addon2" name="searchText" />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary"> Ara </button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Hakkımızda Resmi</th>
                            <th>Hakkımızda Açıklaması</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td><img src="@item.ImageUrl" style="width:75px;height:75px;" alt="Hakkımızda Görseli" /></td>
                                <td class="description-cell">@item.Description</td> <!-- Açıklamaya kaydırma efekti ekledik -->
                                <td>@item.Date</td>
                                <td>
                                    <a class="btn btn-danger btn-sm" href="/About/DeleteAbout/@item.AboutId">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="/About/UpdateAbout/@item.AboutId">
                                        <i class="fa fa-pencil"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/About/CreateAbout" class="btn btn-info">
                    <i class="mdi mdi-file-check btn-icon-append"></i> Yeni Hakkımızda Girişi
                </a>
            </div>
        </div>
    </div>
</div>
